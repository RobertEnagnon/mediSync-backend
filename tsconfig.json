{
  "compilerOptions": {
    "target": "es6",
    "module": "commonjs",
    "outDir": "./dist",
    "rootDir": "./src",
    "strict": true,
    "esModuleInterop": true,
    "skipLibCheck": true,
    "forceConsistentCasingInFileNames": true,
    "baseUrl": ".",
    "paths": {
      "@/*": ["src/*"]
    },
    "typeRoots": [
      "./node_modules/@types",
      "./src/types",
      "./custom-types"
    ],
    "types": [
      "node",
      "express"
    ]
  },
  "include": [
    "src/**/*",
    "src/types/**/*.d.ts",
    "custom-types/**/*.d.ts"
  ],
  "exclude": [
    "node_modules",
    "dist"
  ]
}
